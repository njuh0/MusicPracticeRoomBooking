@page
@model WebApp.Pages.Students.DeleteModel
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Student</h1>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Warning!</strong> Are you sure you want to delete this student? The student will be archived but their bookings will be preserved.
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Student Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Student Number</dt>
                <dd class="col-sm-9">@Model.Student.StudentNumber</dd>

                <dt class="col-sm-3">Name</dt>
                <dd class="col-sm-9">@Model.Student.FirstName @Model.Student.LastName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Student.Email</dd>

                <dt class="col-sm-3">Program</dt>
                <dd class="col-sm-9">@Model.Student.Program</dd>

                <dt class="col-sm-3">Primary Instrument</dt>
                <dd class="col-sm-9">@Model.Student.PrimaryInstrument</dd>

                <dt class="col-sm-3">Bookings</dt>
                <dd class="col-sm-9">@Model.Student.Bookings.Count</dd>
            </dl>

            @if (Model.Student.Bookings.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    This student has @Model.Student.Bookings.Count booking(s). The bookings will be preserved after deletion.
                </div>
            }
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Student.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>
