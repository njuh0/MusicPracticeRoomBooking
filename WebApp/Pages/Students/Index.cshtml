@page
@model WebApp.Pages.Students.IndexModel
@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Students</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (!Model.Students.Any())
    {
        <div class="alert alert-info">
            No students found. <a asp-page="Create">Create the first student</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Student Number</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Program</th>
                        <th>Instrument</th>
                        <th>Weekly Quota</th>
                        <th>Instructor</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in Model.Students)
                    {
                        <tr>
                            <td>@student.StudentNumber</td>
                            <td>@student.FirstName @student.LastName</td>
                            <td>@student.Email</td>
                            <td>
                                <span class="badge bg-@(student.Program == DAL.Entities.StudentProgram.PerformanceMajor ? "primary" : student.Program == DAL.Entities.StudentProgram.EducationMajor ? "success" : "secondary")">
                                    @student.Program
                                </span>
                            </td>
                            <td>@student.PrimaryInstrument</td>
                            <td>
                                @student.EffectiveWeeklyQuota hours
                                @if (student.QuotaPenaltyHours > 0)
                                {
                                    <span class="text-danger" title="Penalty: @student.QuotaPenaltyHours hours">
                                        <i class="bi bi-exclamation-triangle"></i>
                                    </span>
                                }
                            </td>
                            <td>@(student.Instructor != null ? $"{student.Instructor.FirstName} {student.Instructor.LastName}" : "N/A")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Details" asp-route-id="@student.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-page="Edit" asp-route-id="@student.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@student.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
