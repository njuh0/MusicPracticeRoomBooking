@page
@model WebApp.Pages.Bookings.EditModel
@{
    ViewData["Title"] = "Edit Booking";
}

<div class="container mt-4">
    <h1>Edit Booking</h1>

    <div class="row">
        <div class="col-md-8">
            <form method="post" class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="Input.Id" />

                    <div class="mb-3">
                        <label asp-for="Input.StudentId" class="form-label"></label>
                        <select asp-for="Input.StudentId" class="form-select" asp-items="Model.StudentSelectList">
                            <option value="">-- Select Student --</option>
                        </select>
                        <span asp-validation-for="Input.StudentId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.RoomId" class="form-label"></label>
                        <select asp-for="Input.RoomId" class="form-select" asp-items="Model.RoomSelectList">
                            <option value="">-- Select Room --</option>
                        </select>
                        <span asp-validation-for="Input.RoomId" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.StartTime" class="form-label"></label>
                            <input asp-for="Input.StartTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Input.StartTime" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Input.EndTime" class="form-label"></label>
                            <input asp-for="Input.EndTime" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Input.EndTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Purpose" class="form-label"></label>
                        <select asp-for="Input.Purpose" class="form-select" asp-items="Html.GetEnumSelectList<DAL.Entities.BookingPurpose>()">
                            <option value="">-- Select Purpose --</option>
                        </select>
                        <span asp-validation-for="Input.Purpose" class="text-danger"></span>
                        <div class="form-text">Max duration: Regular Practice (2h), Recital Prep (3h, requires instructor approval), Ensemble Rehearsal (4h).</div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.ApprovedByInstructorId" class="form-label"></label>
                        <select asp-for="Input.ApprovedByInstructorId" class="form-select" asp-items="Model.InstructorSelectList">
                            <option value="">-- Select Instructor (Optional) --</option>
                        </select>
                        <span asp-validation-for="Input.ApprovedByInstructorId" class="text-danger"></span>
                        <div class="form-text">Required for Recital Prep bookings. Adding instructor will automatically approve the booking.</div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle"></i> Edit Guidelines</h5>
                    <ul class="mb-0">
                        <li>You can update student, room, times, and instructor</li>
                        <li>For Recital Prep bookings, adding an instructor will automatically approve the booking</li>
                        <li>Time changes are validated for conflicts</li>
                        <li>Duration limits still apply based on purpose</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
