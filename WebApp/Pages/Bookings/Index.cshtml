@page
@model WebApp.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Bookings";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Practice Room Bookings</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (!Model.Bookings.Any())
    {
        <div class="alert alert-info">
            No bookings found. <a asp-page="Create">Create the first booking</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Date & Time</th>
                        <th>Student</th>
                        <th>Room</th>
                        <th>Duration</th>
                        <th>Purpose</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model.Bookings)
                    {
                        <tr>
                            <td>
                                <strong>@booking.StartTime.ToString("MMM dd, yyyy")</strong><br/>
                                <small class="text-muted">@booking.StartTime.ToString("HH:mm") - @booking.EndTime.ToString("HH:mm")</small>
                            </td>
                            <td>
                                <a asp-page="/Students/Details" asp-route-id="@booking.StudentId">
                                    @booking.Student.FirstName @booking.Student.LastName
                                </a>
                                <br/><small class="text-muted">@booking.Student.StudentNumber</small>
                            </td>
                            <td>
                                <a asp-page="/Rooms/Details" asp-route-id="@booking.RoomId">
                                    @booking.Room.Name
                                </a>
                                <br/><small class="text-muted">@booking.Room.Type</small>
                            </td>
                            <td>@booking.DurationHours hours</td>
                            <td>
                                <span class="badge bg-@(booking.Purpose == DAL.Entities.BookingPurpose.RecitalPrep ? "warning" : booking.Purpose == DAL.Entities.BookingPurpose.EnsembleRehearsal ? "info" : "secondary")">
                                    @booking.Purpose
                                </span>
                                @if (booking.RequiresApproval)
                                {
                                    <br/>
                                    if (booking.IsApproved)
                                    {
                                        <small class="text-success"><i class="bi bi-check-circle"></i> Approved</small>
                                    }
                                    else
                                    {
                                        <small class="text-warning"><i class="bi bi-clock"></i> Pending approval</small>
                                    }
                                }
                            </td>
                            <td>
                                <span class="badge bg-@(booking.Status == DAL.Entities.BookingStatus.Confirmed ? "success" : booking.Status == DAL.Entities.BookingStatus.Cancelled ? "danger" : booking.Status == DAL.Entities.BookingStatus.NoShow ? "warning" : "info")">
                                    @booking.Status
                                </span>
                                @if (booking.CheckedInAt.HasValue)
                                {
                                    <br/><small class="text-muted"><i class="bi bi-check-circle"></i> Checked in</small>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Details" asp-route-id="@booking.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    @if (booking.Status == DAL.Entities.BookingStatus.Confirmed)
                                    {
                                        <a asp-page="Delete" asp-route-id="@booking.Id" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
