@page
@model WebApp.Pages.Rooms.DetailsModel
@{
    ViewData["Title"] = "Room Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>@Model.Room.Name</h1>
        <div>
            <a asp-page="Edit" asp-route-id="@Model.Room.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-page="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-door-open"></i> Room Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Room Name</dt>
                        <dd class="col-sm-8">@Model.Room.Name</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Room.Type == DAL.Entities.RoomType.Large ? "primary" : Model.Room.Type == DAL.Entities.RoomType.Medium ? "success" : "secondary")">
                                @Model.Room.Type
                            </span>
                        </dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.Room.Capacity people</dd>

                        <dt class="col-sm-4">Soundproof</dt>
                        <dd class="col-sm-8">
                            @if (Model.Room.IsSoundproof)
                            {
                                <span class="text-success">
                                    <i class="bi bi-check-circle"></i> Yes
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">
                                    <i class="bi bi-x-circle"></i> No
                                </span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Equipment</h5>
                </div>
                <div class="card-body">
                    @if (Model.Room.RoomEquipments.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var re in Model.Room.RoomEquipments)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>
                                        <i class="bi bi-box"></i> @re.Equipment.Name
                                        <small class="text-muted">(@re.Equipment.Type)</small>
                                    </span>
                                    <span class="badge bg-primary rounded-pill">Ã—@re.Quantity</span>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No equipment assigned to this room.</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0"><i class="bi bi-calendar-check"></i> Recent Bookings</h5>
        </div>
        <div class="card-body">
            @if (Model.Room.Bookings.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover">
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Student</th>
                                <th>Purpose</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var booking in Model.Room.Bookings.OrderByDescending(b => b.StartTime).Take(10))
                            {
                                <tr>
                                    <td>
                                        @booking.StartTime.ToString("MMM dd, yyyy HH:mm") - @booking.EndTime.ToString("HH:mm")
                                    </td>
                                    <td>@booking.Student.FirstName @booking.Student.LastName</td>
                                    <td>@booking.Purpose</td>
                                    <td>
                                        <span class="badge bg-@(booking.Status == DAL.Entities.BookingStatus.Confirmed ? "success" : booking.Status == DAL.Entities.BookingStatus.Cancelled ? "danger" : booking.Status == DAL.Entities.BookingStatus.NoShow ? "warning" : "info")">
                                            @booking.Status
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @if (Model.Room.Bookings.Count > 10)
                {
                    <p class="text-muted mb-0 mt-2">Showing 10 most recent bookings out of @Model.Room.Bookings.Count total.</p>
                }
            }
            else
            {
                <p class="text-muted mb-0">No bookings for this room yet.</p>
            }
        </div>
    </div>
</div>
