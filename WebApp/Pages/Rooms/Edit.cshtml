@page
@model WebApp.Pages.Rooms.EditModel
@{
    ViewData["Title"] = "Edit Room";
}

<div class="container mt-4">
    <h1>Edit Room</h1>

    <div class="row">
        <div class="col-md-8">
            <form method="post" class="card">
                <div class="card-body">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="Input.Id" />

                    <div class="mb-3">
                        <label asp-for="Input.Name" class="form-label"></label>
                        <input asp-for="Input.Name" class="form-control" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Type" class="form-label"></label>
                        <select asp-for="Input.Type" class="form-select" asp-items="Html.GetEnumSelectList<DAL.Entities.RoomType>()">
                        </select>
                        <span asp-validation-for="Input.Type" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Input.Capacity" class="form-label"></label>
                        <input asp-for="Input.Capacity" type="number" class="form-control" min="1" max="50" />
                        <span asp-validation-for="Input.Capacity" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="Input.IsSoundproof" type="checkbox" class="form-check-input" />
                        <label asp-for="Input.IsSoundproof" class="form-check-label"></label>
                        <span asp-validation-for="Input.IsSoundproof" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-page="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-info-circle"></i> Note</h5>
                    <p class="mb-0">Room name must be unique. Existing bookings and equipment assignments will be preserved.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
