@page
@model WebApp.Pages.Rooms.DeleteModel
@{
    ViewData["Title"] = "Delete Room";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Room</h1>

    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Warning!</strong> Are you sure you want to delete this room? The room will be archived but bookings and equipment assignments will be preserved.
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Room Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Room Name</dt>
                <dd class="col-sm-9">@Model.Room.Name</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Room.Type == DAL.Entities.RoomType.Large ? "primary" : Model.Room.Type == DAL.Entities.RoomType.Medium ? "success" : "secondary")">
                        @Model.Room.Type
                    </span>
                </dd>

                <dt class="col-sm-3">Capacity</dt>
                <dd class="col-sm-9">@Model.Room.Capacity people</dd>

                <dt class="col-sm-3">Soundproof</dt>
                <dd class="col-sm-9">
                    @if (Model.Room.IsSoundproof)
                    {
                        <span class="text-success"><i class="bi bi-check-circle"></i> Yes</span>
                    }
                    else
                    {
                        <span class="text-muted"><i class="bi bi-x-circle"></i> No</span>
                    }
                </dd>

                <dt class="col-sm-3">Equipment</dt>
                <dd class="col-sm-9">
                    @if (Model.Room.RoomEquipments.Any())
                    {
                        <span class="badge bg-info">@Model.Room.RoomEquipments.Count items</span>
                        <ul class="mb-0 mt-2">
                            @foreach (var re in Model.Room.RoomEquipments)
                            {
                                <li>@re.Equipment.Name (Ã—@re.Quantity)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </dd>

                <dt class="col-sm-3">Bookings</dt>
                <dd class="col-sm-9">@Model.Room.Bookings.Count</dd>
            </dl>

            @if (Model.Room.Bookings.Any())
            {
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i>
                    This room has @Model.Room.Bookings.Count booking(s). The bookings will be preserved after deletion.
                </div>
            }
        </div>
    </div>

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="Room.Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-page="Index" class="btn btn-secondary">
            <i class="bi bi-x-circle"></i> Cancel
        </a>
    </form>
</div>
