@page
@model WebApp.Pages.Rooms.IndexModel
@{
    ViewData["Title"] = "Rooms";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Practice Rooms</h1>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    @if (!Model.Rooms.Any())
    {
        <div class="alert alert-info">
            No rooms found. <a asp-page="Create">Create the first room</a>.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Room Name</th>
                        <th>Type</th>
                        <th>Capacity</th>
                        <th>Soundproof</th>
                        <th>Equipment</th>
                        <th>Bookings</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var room in Model.Rooms)
                    {
                        <tr>
                            <td>@room.Name</td>
                            <td>
                                <span class="badge bg-@(room.Type == DAL.Entities.RoomType.Large ? "primary" : room.Type == DAL.Entities.RoomType.Medium ? "success" : "secondary")">
                                    @room.Type
                                </span>
                            </td>
                            <td>@room.Capacity people</td>
                            <td>
                                @if (room.IsSoundproof)
                                {
                                    <i class="bi bi-check-circle text-success" title="Soundproof"></i>
                                }
                                else
                                {
                                    <i class="bi bi-x-circle text-muted" title="Not soundproof"></i>
                                }
                            </td>
                            <td>
                                @if (room.RoomEquipments.Any())
                                {
                                    <span class="badge bg-info">@room.RoomEquipments.Count items</span>
                                }
                                else
                                {
                                    <span class="text-muted">None</span>
                                }
                            </td>
                            <td>
                                @room.Bookings.Count
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="Details" asp-route-id="@room.Id" class="btn btn-info btn-sm">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-page="Edit" asp-route-id="@room.Id" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-page="Delete" asp-route-id="@room.Id" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
